{
    "extends": ["tslint:recommended", "tslint-react"],
    "rules": {
        "max-line-length": {
            "options": [120]
        },
        "new-parens": true,
        "no-arg": true,
        "no-bitwise": true,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": false,
        "quotemark": [
            true,
            "single",
            "jsx-double"
        ],
        "semicolon": [
            true,
            "always"
        ],
        "triple-equals": [
            true,
            "allow-null-check"
        ],
        "interface-name": [
            true, 
            "never-prefix"
        ],
        "no-console": [
            false
        ]
    },
    "jsRules": {
        "max-line-length": {
            "options": [120]
        },
        "quotemark": [
            true,
            "single",
            "jsx-double"
        ],
        "semicolon": [
            true,
            "always"
        ],
        "triple-equals": [
            true,
            "allow-null-check"
        ],
        "interface-name": [
            true, 
            "never-prefix"
        ],
        "no-console": [
            false
        ]
    }
}